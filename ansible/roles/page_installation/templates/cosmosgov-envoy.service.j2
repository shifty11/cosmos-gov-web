[Unit]
Description=Envoy Proxy for Cosmos Gov grpc
ConditionPathExists=/etc/envoy/cosmosgov/
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/envoy -c /etc/envoy/cosmosgov/envoy.yaml
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target